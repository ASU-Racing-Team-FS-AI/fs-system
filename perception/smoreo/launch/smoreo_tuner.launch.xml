<?xml version="1.0"?>
<launch>
	<let name="setup_name" default="flir"/>

	

	<node name="tuner" pkg="smoreo" exec="tuner.py" args="$(var setup_name)" output="screen">
		<param name="/smoreo/camera_raw" 		value="/front_camera_rgb/image_raw" />
		<param name="/smoreo/cut_off_viz" 		value="/perception/smoreo/cut_off_viz"/>
	</node>
	<node pkg="rqt_reconfigure" exec="rqt_reconfigure" name="rqt_reconfigure"/>
</launch>
